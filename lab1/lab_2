— создадим таблицу 
CREATE TABLE Client( 
ID_Client INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT, 
FIO_Clienta NVARCHAR(50) NOT NULL, 
ID_Kind_Of_Activity INTEGER NOT NULL);
 
